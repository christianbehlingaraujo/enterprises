<core:FragmentDefinition
    controllerName="com.itsgroup.brz.enterprises.controller.SimulateProposal"
	xmlns="sap.m"
    xmlns:core="sap.ui.core"
    xmlns:grid="sap.ui.layout.cssgrid"
    xmlns:viz="sap.viz.ui5.controls" 
    xmlns:layout="sap.ui.layout"
    xmlns:viz.feeds="sap.viz.ui5.controls.common.feeds"
    xmlns:viz.data="sap.viz.ui5.data"
>
    <layout:FixFlex id="simulateProposalGraphic" minFlexSize="300">
        <layout:fixContent>
        </layout:fixContent>
        <layout:flexContent>
            <viz:VizFrame 
                id="idVizFrame" 
                uiConfig="{applicationSet:'fiori'}" 
                vizType="pie"
                width="100%"
                height="100%"
            >
                <viz:dataset>
                    <viz.data:FlattenedDataset data="{graphic>/items}">
                        <viz.data:dimensions>
                            <viz.data:DimensionDefinition 
                                name="name"
                                value="{name}" 
                            />
                        </viz.data:dimensions>
                        <viz.data:measures>
                            <viz.data:MeasureDefinition 
                                name="units"
                                value="{units}" 
                            />
                        </viz.data:measures>
                    </viz.data:FlattenedDataset>
                </viz:dataset>

                <viz:feeds>
                    <viz.feeds:FeedItem 
                        uid="size" 
                        type="Measure"
                        values="units"
                    />
                    <viz.feeds:FeedItem 
                        uid="color" 
                        type="Dimension"
                        values="name" 
                    />
                </viz:feeds>
            </viz:VizFrame>
        </layout:flexContent>
    </layout:FixFlex>
</core:FragmentDefinition>