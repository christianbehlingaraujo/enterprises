<mvc:View
	controllerName="com.itsgroup.brz.enterprises.controller.SimulateProposal"
	xmlns:mvc="sap.ui.core.mvc"
	xmlns="sap.m"
	xmlns:core="sap.ui.core"
    xmlns:grid="sap.ui.layout.cssgrid"
	displayBlock="true"
	height="100%"
>
    <Page
        backgroundDesign="Solid"
        showNavButton="true"
        navButtonPress=".onNavBack"
        title="{i18n>simulateProposalTitle}"
        titleLevel="H2"
    >
        <Panel
            backgroundDesign="Solid"
            headerText="{i18n>simulateProposalHeaderTitle} Portal Caminho das Montanhas"
            height="100%"
        >
            <grid:CSSGrid
				id="gridContainer"
				class="sapUiSmallMarginTop"
				gridTemplateRows="1fr"
				gridTemplateColumns="repeat(2,1fr)"
				gridGap="1rem"
			>
                <VBox>
                    <Title
                    level="Auto"
                    text="{i18n>simulateProposalPriceList}"
                    textAlign="Initial"
                    titleStyle="Auto"
                    width="100%"
                    wrapping="false"
                    wrappingType="Normal"
                    />
                    <ComboBox
                        id="comboBoxPriceList"
                        items=""
                        selectedKey=""
                        width="100%"
                    >
                        <core:Item key="" text="" />
                    </ComboBox>

                    <Title 
                        text="{i18n>simulateProposalOrder}" 
                        class="sapUiSmallMarginTop"
                        textAlign="Initial" 
                        titleStyle="Auto"
                        level="Auto"
                        width="100%"
                        wrapping="false"
                        wrappingType="Normal"
                    />
                    <grid:CSSGrid
                        id="gridButtonContent"
                        gridTemplateRows="1fr"
                        gridTemplateColumns="repeat(5,1fr)"
                    >
                        <Button
                            id="buttonFloor"
                            text="{i18n>simulateProposalFloor}"
                            class="buttonsOrders"
                            iconFirst="false"
                            type="Unstyled"
                            width="100%"
                            press="onOrderFilter"
                        />
                        <Button
                            id="buttonColumn"
                            text="{i18n>simulateProposalColumn}"
                            class="buttonsOrders"
                            iconFirst="false"
                            type="Unstyled"
                            width="100%"
                            press="onOrderFilter"
                        />
                        <Button
                            id="buttonSituation"
                            text="{i18n>simulateProposalSituation}"
                            class="buttonsOrders"
                            iconFirst="false"
                            type="Unstyled"
                            width="100%"
                            press="onOrderFilter"
                        />
                        <Button
                            id="buttonArea"
                            text="{i18n>simulateProposalArea}"
                            class="buttonsOrders"
                            iconFirst="false"
                            type="Unstyled"
                            width="100%"
                            press="onOrderFilter"
                        />
                        <Button
                            id="buttonPrice"
                            text="{i18n>simulateProposalPrice}"
                            class="buttonsOrders"
                            iconFirst="false"
                            type="Unstyled"
                            width="100%"
                            press="onOrderFilter"
                        />
                    </grid:CSSGrid>

                    <Title 
                        text="{i18n>simulateProposalSituation}" 
                        class="sapUiSmallMarginTop"
                        textAlign="Initial" 
                        titleStyle="Auto"
                        level="Auto"
                        width="100%"
                        wrapping="false"
                        wrappingType="Normal"
                    />
                    <Button
                        id="buttonAll"
                        text="{i18n>simulateProposalAll}"
                        class="buttonAll"
                        type="Unstyled"
                        width="100%"
                    />
                    <Button
                        id="buttonContractInCorrection"
                        text="{i18n>simulateProposalContractInCorrection}"
                        class="buttonContractInCorrection"
                        type="Unstyled"
                        width="100%"
                    />
                    <Button
                        id="buttonAvailable"
                        text="{i18n>simulateProposalAvailable}"
                        class="buttonAvailable"
                        type="Unstyled"
                        width="100%"
                    />
                    <Button
                        id="buttonSignature"
                        text="{i18n>simulateProposalSignature}"
                        class="buttonSignature"
                        type="Unstyled"
                        width="100%"
                    />
                    <Button
                        id="buttonInProposal"
                        text="{i18n>simulateProposalInProposal}"
                        class="buttonInProposal"
                        type="Unstyled"
                        width="100%"
                    />
                    <Button
                        id="buttonBargainedWithBarter"
                        text="{i18n>simulateProposalBargainedWithBarter}"
                        class="buttonBargainedWithBarter"
                        type="Unstyled"
                        width="100%"
                    />
                    <Button
                        id="buttonExchange"
                        text="{i18n>simulateProposalExchange}"
                        class="buttonExchange"
                        type="Unstyled"
                        width="100%"
                    />
                    <Button
                        id="buttonReservedForSale"
                        text="{i18n>simulateProposalReservedForSale}"
                        class="buttonReservedForSale"
                        type="Unstyled"
                        width="100%"
                    />
                    <Button
                        id="buttonReservedCompany"
                        text="{i18n>simulateProposalReservedCompany}"
                        class="buttonReservedCompany"
                        type="Unstyled"
                        width="100%"
                    />
                    <Button
                        id="buttonSold"
                        text="{i18n>simulateProposalSold}"
                        class="buttonSold"
                        type="Unstyled"
                        width="100%"
                    />
                    
                    <core:Fragment fragmentName="com.itsgroup.brz.enterprises.view.fragments.simulateProposal.GraphicInformation" type="XML"/>
                </VBox>

                <VBox>
                    <VBox height="15%">
                        <core:Fragment fragmentName="com.itsgroup.brz.enterprises.view.fragments.simulateProposal.MyReservations" type="XML"/>
                    </VBox>
                    <Title 
                        text="{i18n>simulateProposalUnits}" 
                        class="sapUiSmallMarginTop"
                        textAlign="Initial" 
                        titleStyle="Auto"
                        level="Auto"
                        width="100%"
                        wrapping="false"
                        wrappingType="Normal"
                    />
                    <grid:CSSGrid
                        id="gridButtonUnitsContent"
                        gridTemplateRows="1fr"
                        gridTemplateColumns="repeat(2,1fr)"
                        gridGap="1rem"
                    >
                        <Button
                            id="buttonUnitDetails"
                            text="{i18n>simulateProposalUnitDetails}"
                            class="buttonUnitDetails"
                            type="Unstyled"
                            width="100%"
                        />
                        <Button
                            id="buttonTable"
                            text="{i18n>simulateProposalTable}"
                            class="buttonTable"
                            type="Unstyled"
                            width="100%"
                        />
                    </grid:CSSGrid>

                    <core:Fragment fragmentName="com.itsgroup.brz.enterprises.view.fragments.simulateProposal.Units" type="XML"/>
                </VBox>
            </grid:CSSGrid>
        </Panel>
    </Page>

</mvc:View>